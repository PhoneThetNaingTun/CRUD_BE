generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id           String   @id @default(cuid())
  product_name String
  price        Float
  description  String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}

enum Role {
  DEVELOPER
  MANAGER
  ADMIN
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  role       Role
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
